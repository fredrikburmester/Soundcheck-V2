{
	"apps": [
		{
			"name": "s-v2-frontend",
			"script": "cd ./frontend && npm run build && npm run preview",
			"watch": ["frontend"],
			"ignore_watch": ["frontend/node_modules", "frontend/dist"],
			"env": {
				"NODE_ENV": "production"
			}
		},
		{
			"name": "s-v2-backend",
			"script": "cd ./backend && npm run start",
			"watch": ["backend"],
			"ignore_watch": ["backend/node_modules"],
			"env": {
				"NODE_ENV": "production",
				"CALLBACK_URL": "https://dev.soundcheckgame.com/callback",
				"PORT": 5005
			}
		}
	]
}
